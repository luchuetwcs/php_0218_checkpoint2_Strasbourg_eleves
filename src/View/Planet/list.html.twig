{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
  <h1 class="col-12">All Planets</h1>
</div>
<div class="row">
  <ul class="list">
      {% for planet in planets %}
        <li><a href="/movies/{{ planet.id }}">{{  planet.id  }}. {{  planet.name  }}</a></li>
      {% else %}
        <li>Nothing to display</li>
      {% endfor %}

  </ul>
</div>
<nav class="row">
  <a href="/movies">Check the movies</a>
  <a href="/characters">Check the characters</a>
</nav>
{% endblock %}
