{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">Beast name </h1>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="#{# url to edition page #}" class="float-right">Edit</a>
        </div>
    </div>
    <div class="row detail">
        <figure class="col-12 col-md-4">
            <img src="{{beast.picture}}" class="img-fluid"/>
        </figure>
        <div class="col-12 col-md-8">
            <p>Area : {{beast.area}}</p>
            <p>Size : {{beast.size}}</p>
            <p>Planet : {{beast.id_planet}} </p>
            <p>Movie(s) :{{beast.id_movie}}</p>
        </div>
    </div>
    <a href="/beasts">Back</a>
{% endblock %}
