{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <h1 class="col-12">{{ id.name }}</h1>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="#{# url to edition page #}" class="float-right">Edit</a>
        </div>
    </div>
    <div class="row detail">
        <figure class="col-12 col-md-4">
            <img src="{{ id.picture }}" class="img-fluid"/>
        </figure>
        <div class="col-12 col-md-8">
            <p>Area : {{ id.area }}</p>
            <p>Size : {{ id.size }}</p>
            <p>Planet :{{ id.id_movie }} </p>
            <p>Movie(s) :{{ id.id_planet }}</p>
        </div>
    </div>
    <a href="/beasts">Back</a>
{% endblock %}
